@model MovieApp.Models.Genre

<link href="@Url.Content("~/Styles/GetMovie.css")" rel="stylesheet" type="text/css" />

<h2>@Model.Name</h2>

@{var sortedMovies = @Model.Movies.OrderBy(x => x.Title).ToList(); }

@foreach (var movie in @sortedMovies)
{
    <li style="list-style-type:none"><h3><a href="#" class="movielink" value="@movie.Id" id="@movie.Id">@movie.Title (@movie.Year)</a></h3></li>
}

<div id='dialog' name="moviedialog" class='modal'>
    <div id="dialogcontent">
    </div>
</div>

<script src="@Url.Content("~/Scripts/Movie.js")" type="text/javascript"></script> 
