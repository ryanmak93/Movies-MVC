@model ICollection<MovieApp.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<link href="@Url.Content("~/Styles/GetMovie.css")" rel="stylesheet" type="text/css" />

<h3>Movies</h3>

Search: <input type="search" id="movieSearch" name="movieId" />
<br />
<br />
@foreach (var item in Model.OrderBy(g => g.Name)) {
    @Html.ActionLink(@item.Name, "All", "Genre", new { id = @item.Id }, new { Style = "font-size:24px; color: red" })
    <br />
    foreach (var movie in item.Movies.Reverse().Take(5))
    {
        <li style="list-style-type:none"><h4><a href="#" class="movielink" value="@movie.Id" id="@movie.Id">@movie.Title (@movie.Year)</a></h4></li>
    }
}

<div id='dialog' name="moviedialog" class='modal'>
    <div id="dialogcontent">
    </div>
</div>  

<script src="@Url.Content("~/Scripts/Movie.js")" type="text/javascript"></script>


<style>
    ul{
        list-style:none;
        padding-left:2px;
    }

    .ui-autocomplete {
        background: gray;
        border-radius: 0px;
        width:250px;
    }


    .ui-menu .ui-menu-item a {
        background: white;        
    }

</style>